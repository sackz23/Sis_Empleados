@model Sis_Empleados.Models.Departamento

@{
    ViewData["Title"] = "Eliminar departamento";
}

<h2>¿Seguro que deseas eliminar este departamento?</h2>

<div class="alert alert-warning mt-3">
    Esta acción no se puede deshacer.
</div>

<div class="card p-4 mt-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Departamento_De_Trabajo</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id_Departamento" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

