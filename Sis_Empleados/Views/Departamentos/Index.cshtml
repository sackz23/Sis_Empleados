@model IEnumerable<Sis_Empleados.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
    string buscar = ViewBag.Buscar;
    int paginaActual = ViewBag.PaginaActual;
    int totalPaginas = ViewBag.TotalPaginas;
}

<h2>Departamentos</h2>

<!-- Barra de búsqueda -->
<form method="get" asp-action="Index" class="row mb-3">
    <div class="col-md-6">
        <input type="text" name="buscar" class="form-control" placeholder="Buscar departamento..." value="@buscar" />
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        <a asp-action="Create" class="btn btn-success float-end">+ Nuevo departamento</a>
    </div>
</form>

<!-- Tabla de departamentos -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Departamento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dep in Model)
        {
            <tr>
                <td>@dep.Departamento_De_Trabajo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@dep.Id_Departamento" class="btn btn-info btn-sm">Ver</a>
                    @if (ViewBag.Rol == "Administrador")
                    {
                    <a asp-action="Edit" asp-route-id="@dep.Id_Departamento" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@dep.Id_Departamento" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
<nav aria-label="Paginación de departamentos">
    <ul class="pagination justify-content-center">
        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pagina="@(paginaActual - 1)"
               asp-route-buscar="@buscar">Anterior</a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == paginaActual ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pagina="@i"
                   asp-route-buscar="@buscar">@i</a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pagina="@(paginaActual + 1)"
               asp-route-buscar="@buscar">Siguiente</a>
        </li>
    </ul>
</nav>
