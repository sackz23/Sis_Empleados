@model IEnumerable<Sis_Empleados.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h2>Departamentos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Nuevo departamento</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Departamento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dep in Model)
        {
            <tr>
                <td>@dep.Departamento_De_Trabajo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@dep.Id_Departamento" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@dep.Id_Departamento" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@dep.Id_Departamento" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
