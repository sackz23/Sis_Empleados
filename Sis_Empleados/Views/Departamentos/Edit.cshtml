@model Sis_Empleados.Models.Departamento

@{
    ViewData["Title"] = "Editar departamento";
}

<h2>Editar departamento</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id_Departamento" />
    <div class="mb-3">
        <label>Nombre del departamento</label>
        <input asp-for="Departamento_De_Trabajo" class="form-control" />
        <span asp-validation-for="Departamento_De_Trabajo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
