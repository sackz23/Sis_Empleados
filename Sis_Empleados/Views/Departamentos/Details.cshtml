@model Sis_Empleados.Models.Departamento

@{
    ViewData["Title"] = "Detalles del departamento";
}

<h2>Detalles del departamento</h2>

<div class="card p-4 shadow-sm mt-3">
    <dl class="row">
        <dt class="col-sm-3">Departamento</dt>
        <dd class="col-sm-9">@Model.Departamento_De_Trabajo</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id_Departamento" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
