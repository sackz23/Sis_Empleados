@model Sis_Empleados.Models.Empleado

@{
    ViewData["Title"] = "Detalles del empleado";
}

<h2>Detalles del empleado</h2>

<div class="card mt-3 p-4 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Cargo</dt>
        <dd class="col-sm-9">@Model.CargoEmpleado.Cargo_De_Empleado</dd>

        <dt class="col-sm-3">Departamento</dt>
        <dd class="col-sm-9">@Model.CargoEmpleado.Departamento.Departamento_De_Trabajo</dd>

        <dt class="col-sm-3">Fecha de nacimiento</dt>
        <dd class="col-sm-9">@Model.Fecha_Nacimiento.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Fecha de ingreso</dt>
        <dd class="col-sm-9">@Model.Fecha_Ingreso.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Activo</dt>
        <dd class="col-sm-9">@(Model.Activo ? "Sí" : "No")</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id_Empleado" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>

