@model IEnumerable<Sis_Empleados.Models.Rol>

@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-4">

    <div class="card shadow border-0">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold text-primary">Roles del Sistema</h3>
               @if(ViewBag.Rol == "Administrador")
               {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nuevo Rol
                </a>
               }
            </div>

            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre del Rol</th>
                        <th style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre_Rol</td>
                            <td>
                                @if(ViewBag.Rol == "Administrador")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id_Rol" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id_Rol" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>

