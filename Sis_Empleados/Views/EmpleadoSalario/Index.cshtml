@model IEnumerable<Sis_Empleados.Models.Empleado_Salario>

@{
    ViewData["Title"] = "Salarios";
    string buscar = ViewBag.Buscar;
    int paginaActual = ViewBag.PaginaActual;
    int totalPaginas = ViewBag.TotalPaginas;
}

<h2>Salarios por Empleado</h2>

<form method="get" class="row mb-3">
    <div class="col-md-6">
        <input type="text" name="buscar" class="form-control"
               placeholder="Buscar por empleado o período..." value="@buscar">
    </div>
    <div class="col-md-6">
        <button class="btn btn-primary">Buscar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        <a asp-action="Create" class="btn btn-success float-end">+ Nuevo salario</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Empleado</th>
            <th>Período</th>
            <th>Salario Base</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Empleado.Nombre</td>
                <td>@s.Periodo.Periodo_De_Pago</td>
                <td>C$ @s.Salario_Base</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id_EmpleadoSalario" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@s.Id_EmpleadoSalario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">

        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link" asp-route-pagina="@(paginaActual - 1)" asp-route-buscar="@buscar">Anterior</a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(paginaActual == i ? "active" : "")">
                <a class="page-link" asp-route-pagina="@i" asp-route-buscar="@buscar">@i</a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link" asp-route-pagina="@(paginaActual + 1)" asp-route-buscar="@buscar">Siguiente</a>
        </li>

    </ul>
</nav>
