@model Sis_Empleados.Models.Empleado_Salario

@{
    ViewData["Title"] = "Editar salario";
}

<h2>Editar salario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id_EmpleadoSalario" />

    <div class="mb-3">
        <label>Empleado</label>
        <select asp-for="Id_Empleado" class="form-select">
            <option value="">Seleccione...</option>
            @foreach (var e in ViewBag.Empleados)
            {
                <option value="@e.Id_Empleado"
                        selected="@(Model.Id_Empleado == e.Id_Empleado)">
                    @e.Nombre
                </option>
            }
        </select>
        <span asp-validation-for="Id_Empleado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Período</label>
        <select asp-for="Id_Periodo" class="form-select">
            <option value="">Seleccione...</option>
            @foreach (var p in ViewBag.Periodos)
            {
                <option value="@p.Id_Periodo"
                        selected="@(Model.Id_Periodo == p.Id_Periodo)">
                    @p.Periodo_De_Pago
                </option>
            }
        </select>
        <span asp-validation-for="Id_Periodo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Salario Base</label>
        <input asp-for="Salario_Base" class="form-control" />
        <span asp-validation-for="Salario_Base" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
