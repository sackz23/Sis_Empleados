@{
    ViewData["Title"] = "Panel Principal";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-3">Bienvenido al Sistema de Empleados</h2>

        <h4 class="text-center text-primary">
            Hola, @ViewBag.Usuario
        </h4>

        <p class="text-center text-muted">
            Rol asignado: @ViewBag.Rol
        </p>

        <hr />

        <div class="text-center mt-4">
            <a asp-controller="Nomina" asp-action="Index" class="btn btn-outline-info m-2">💼Nómina</a>
            <a asp-controller="Empleados" asp-action="Index" class="btn btn-outline-primary m-2">👷‍♂️ Gestión de Empleados</a>
            <a asp-controller="Cargos" asp-action="Index" class="btn btn-outline-info m-2">💼 Cargos</a>
            <a asp-controller="Departamentos" asp-action="Index" class="btn btn-outline-success m-2">🏢 Departamentos</a>
            <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-warning m-2">👤 Usuarios</a>
            <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger m-2">🚪 Cerrar sesión</a>
        </div>
    </div>
</div>