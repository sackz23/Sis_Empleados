@{
    ViewData["Title"] = "Panel Principal";
}

<div class="container py-5">

    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Sistema de Gestión de Empleados</h1>
        <p class="text-muted fs-5">Bienvenido, @ViewBag.Usuario</p>
        <span class="badge bg-secondary">Rol: @ViewBag.Rol</span>
    </div>

    <div class="row g-4">

        <!-- Empleados -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-primary mb-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Gestión de Empleados</h5>
                    <p class="text-muted small">Administra la información del personal</p>
                    <a asp-controller="Empleados" asp-action="Index" class="btn btn-primary w-100">Entrar</a>
                </div>
            </div>
        </div>

        <!-- Departamentos -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-success mb-3">
                        <i class="bi bi-building"></i>
                    </div>
                    <h5 class="card-title fw-bold">Departamentos</h5>
                    <p class="text-muted small">Organización estructural</p>
                    <a asp-controller="Departamentos" asp-action="Index" class="btn btn-success w-100">Entrar</a>
                </div>
            </div>
        </div>

        <!-- Usuarios -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-warning mb-3">
                        <i class="bi bi-person-badge-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Usuarios</h5>
                    <p class="text-muted small">Control de acceso</p>
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-warning w-100">Entrar</a>
                </div>
            </div>
        </div>

        <!-- cargos -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-warning mb-3">
                        <i class="bi bi-person-badge-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Cargos</h5>
                    <p class="text-muted small">Control de acceso</p>
                    <a asp-controller="Cargos" asp-action="Index" class="btn btn-warning w-100">Entrar</a>
                </div>
            </div>
        </div>

        <!-- Roles -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-warning mb-3">
                        <i class="bi bi-person-badge-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Roles</h5>
                    <p class="text-muted small">Control de acceso</p>
                    <a asp-controller="Roles" asp-action="Index" class="btn btn-warning w-100">Entrar</a>
                </div>
            </div>
        </div>

        @if(ViewBag.Rol == "Administrador")
        {
        <!-- Nómina -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-info mb-3">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                    <h5 class="card-title fw-bold">Módulo de Nómina</h5>
                    <p class="text-muted small">Salarios, deducciones y planilla</p>
                    <a asp-controller="Nomina" asp-action="Index" class="btn btn-info w-100">Entrar</a>
                </div>
            </div>
        </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger px-4 py-2">
            <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
        </a>
    </div>

</div>


<style>
    .dashboard-card {
        transition: transform .2s ease, box-shadow .2s ease;
        border-radius: 15px;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, .1);
    }

    .icon-circle {
        width: 70px;
        height: 70px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 30px;
        color: white;
    }
</style>
