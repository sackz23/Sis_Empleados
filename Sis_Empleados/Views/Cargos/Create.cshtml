@model Sis_Empleados.Models.Cargo_Empleado

@{
    ViewData["Title"] = "Nuevo cargo";
}

<h2>Nuevo cargo</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Nombre del cargo</label>
        <input asp-for="Cargo_De_Empleado" class="form-control" />
        <span asp-validation-for="Cargo_De_Empleado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Departamento</label>
        <select asp-for="Id_Departamento" class="form-select">
            <option value="">Seleccione un departamento</option>
            @foreach (var dep in ViewBag.Departamentos)
            {
                <option value="@dep.Id_Departamento">@dep.Departamento_De_Trabajo</option>
            }
        </select>
        <span asp-validation-for="Id_Departamento" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

