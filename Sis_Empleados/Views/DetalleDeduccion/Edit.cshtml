@model Sis_Empleados.Models.Detalle_Deduccion

<h2>Editar detalle de deducción</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id_DetalleDeduccion" />

    <div class="mb-3">
        <label>Tipo de deducción</label>
        <select asp-for="Id_TipoDeducciones" class="form-select">
            @foreach (var t in ViewBag.Tipos)
            {
                <option value="@t.Id_TipoDeducciones"
                        selected="@(Model.Id_TipoDeducciones == t.Id_TipoDeducciones)">
                    @t.Nombre_Deduccion
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Monto (C$)</label>
        <input asp-for="Deduccion" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Deduccion" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
