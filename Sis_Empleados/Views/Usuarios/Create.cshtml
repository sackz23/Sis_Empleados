@model Sis_Empleados.Models.Usuario

@{
    ViewData["Title"] = "Nuevo usuario";
}

<h2>Nuevo usuario</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Empleado</label>
        <select asp-for="Id_Empleado" class="form-select">
            <option value="">Seleccione un empleado</option>
            @foreach (var e in ViewBag.Empleados)
            {
                <option value="@e.Id_Empleado">@e.Nombre</option>
            }
        </select>
        <span asp-validation-for="Id_Empleado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Rol</label>
        <select asp-for="Id_Rol" class="form-select">
            <option value="">Seleccione un rol</option>
            @foreach (var r in ViewBag.Roles)
            {
                <option value="@r.Id_Rol">@r.Nombre_Rol</option>
            }
        </select>
        <span asp-validation-for="Id_Rol" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Nombre de usuario</label>
        <input asp-for="Nombre_Usuario" class="form-control" />
        <span asp-validation-for="Nombre_Usuario" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Contraseña</label>
        <input type="password" name="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
