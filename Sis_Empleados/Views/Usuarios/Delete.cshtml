@model Sis_Empleados.Models.Usuario

@{
    ViewData["Title"] = "Eliminar usuario";
}

<h2>¿Seguro que deseas eliminar este usuario?</h2>

<div class="alert alert-warning mt-3">
    Esta acción no se puede deshacer.
</div>

<div class="card p-4 mt-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Empleado</dt>
        <dd class="col-sm-9">@Model.Empleado?.Nombre</dd>

        <dt class="col-sm-3">Nombre de usuario</dt>
        <dd class="col-sm-9">@Model.Nombre_Usuario</dd>

        <dt class="col-sm-3">Rol asignado</dt>
        <dd class="col-sm-9">@Model.Rol?.Nombre_Rol</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id_Usuario" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
